<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    android:padding="32dp"
    tools:context=".calculator.CalculatorActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvResult"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:cardBackgroundColor="@color/background_component"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="16dp"
            >

            <TextView
                android:id="@+id/tvDisplay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="256697"
                android:textSize="60sp"
                android:textAlignment="textEnd"
                android:textColor="@color/white"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFirstRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/cvResult"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/background_app"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnClear"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:src="@drawable/ic_clear"
                android:tint="@color/white"
                app:backgroundTint="@color/secondary_color_button"
                app:borderWidth="0dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnMinusPlus"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/secondary_color_button"
                android:src="@drawable/ic_minus_plus"
                android:tint="@color/white"
                app:borderWidth="0dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnPercent"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/secondary_color_button"
                android:src="@drawable/ic_percent"
                android:tint="@color/white"
                app:borderWidth="0dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnDivide"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:backgroundTint="@color/terciary_color_button"
                android:src="@drawable/ic_divide"
                android:tint="@color/white"
                app:borderWidth="0dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvSecondRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/cvFirstRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/background_app"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnSeven"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_number_7"
                app:borderWidth="0dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnEight"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_number_8"
                app:borderWidth="0dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnNine"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_number_9"
                app:borderWidth="0dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnTimes"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:backgroundTint="@color/terciary_color_button"
                android:src="@drawable/ic_times"
                app:borderWidth="0dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvThirdRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/cvSecondRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/background_app"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnFour"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_number_4"
                app:borderWidth="0dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnFive"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_number_5"
                app:borderWidth="0dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnSix"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_number_6"
                app:borderWidth="0dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnPlus"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:backgroundTint="@color/terciary_color_button"
                android:src="@drawable/ic_plus"
                app:borderWidth="0dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFourthRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/cvThirdRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/background_app"
            android:orientation="horizontal">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnOne"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_number_1"
                app:borderWidth="0dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnTwo"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_number_2"
                app:borderWidth="0dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnThree"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_number_3"
                app:borderWidth="0dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnMinus"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:backgroundTint="@color/terciary_color_button"
                android:src="@drawable/ic_minus"
                app:borderWidth="0dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvFifthRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/cvFourthRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@color/background_app"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnZero"
                android:layout_width="150dp"
                android:layout_height="75dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/white"
                android:text="0"
                android:textAlignment="textStart"
                android:textSize="24sp"
                android:textColor="@color/black"
                app:borderWidth="0dp"
                app:cornerRadius="100dp"
                />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnDot"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/ic_dot"
                app:borderWidth="0dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnEquals"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:backgroundTint="@color/terciary_color_button"
                android:src="@drawable/ic_equals"
                app:borderWidth="0dp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>